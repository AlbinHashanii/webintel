
<%= render 'shared/errors' , obj: @article %>


<div class="row">
  <div class="col-md-12">
      <%= form_for(@article, html: {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :title %>
        </div>
        <div class="col-sm-12">
            <%= f.text_field :title , class: 'form-control', placeholder: 'Title of article', autofocus: true%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-12">
          <%= f.text_area :description , rows: 5, class: 'form-control', placeholder: 'Body of article', autofocus: true%>
        </div>
      </div>
      <div class="form-check ml-2">
        <div class="row">
          <p>Category: </p>
        <div class="col-sm-10 ">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox mr-2") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
        </div>
      </div>
    <div class="form-group">
      <div class="col-sm-10">
          <%= f.submit  class: "btn btn-primary"%>
      </div>
    </div>
      <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      <p style="margin-left: 13px;">[ <%= link_to 'Cancel request and return to articles', articles_path %> ]</p>
    </div>
  </div>
</div>

