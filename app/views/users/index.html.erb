<h1 align="center" style="margin-bottom:30px;">All <span style="color: #08088A;font-weight: bold">WEBINTEL</span> users</h1>
<%= will_paginate @users, previous_label: '&laquo; Previous', next_label: 'Next &raquo;', class: 'pagination', inner_window: 2, outer_window: 0 %>

<% @users.each do |user| %>
    <div class="row" style="border: 1px solid #A59696; border-radius: 5px; padding: 10px;margin-bottom: 7px;background-color: #F4F6F6">
      <div class="well col-md-4 col-md-offset-4">
        <%= link_to gravatar_for(user), user_path(user) %>

            <%= link_to user.username, user_path(user) %>
        <br>
        <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
      </div>
    </div>
<% end %>